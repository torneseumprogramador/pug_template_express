//- mixin card(titulo, mostrarBotao)
mixin card(lista)
  each item in lista
    .card.shadow-sm
      svg.bd-placeholder-img.card-img-top(width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false")
        title Placeholder
        rect(width="100%" height="100%" fill="#55595c")
        text(x="50%" y="50%" fill="#eceeef" dy=".3em") Thumbnail
      .card-body
        p.card-text Aqui vai o titulo (#{item.titulo})
        .d-flex.justify-content-between.align-items-center
          if item.mostrarBotao
            .btn-group
              button.btn.btn-sm.btn-outline-secondary(type="button") View
              button.btn.btn-sm.btn-outline-secondary(type="button") Edit
          small.text-body-secondary 9 mins
